{
  "providers": [
    {
      "name": "google_drive",
      "vault": "cloudSvc",
      "item": "GoogleDrive",
      "auth": {
        "method": "oauth2_client_file",
        "document_title": "ml4vfxClientSecretFile",
        "token_cache": "~/.cache/oauthmanager/ml4vfx_drive_token.json",
        "scopes": ["https://www.googleapis.com/auth/drive.metadata.readonly"]
      }
    },
    {
      "name": "spotify",
      "vault": "mediaAPIs",
      "item": "Spotify",
      "auth": {
        "method": "oauth2_client",
        "fields": ["client_id", "client_secret", "redirect_uri"],
        "token_cache": "~/.cache/oauthmanager/spotify_token.json",
        "scopes": [
          "playlist-read-private",
          "playlist-modify-private",
          "user-library-read",
          "user-read-private"
        ]
      }
    },
    {
      "name": "notion",
      "vault": "aiServices",
      "item": "Notion",
      "auth": {
        "method": "api_token",
        "field": "secret"
      }
    },
    {
      "name": "supabase",
      "vault": "dbSvc",
      "item": "Supabase",
      "auth": {
        "method": "service_keys",
        "fields": ["Project URL", "anon public", "service_role_secret"]
      }
    }
  ]
}
